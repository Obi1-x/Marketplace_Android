<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductViewActivity">

    <ScrollView
        android:id="@+id/scrolling_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/add_validate_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemsofproduct_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/favorite_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/fui_idp_button_background_google"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@id/pv_divider"
                app:layout_constraintEnd_toEndOf="@id/itemsofproduct_cl"
                app:layout_constraintStart_toEndOf="@id/stockup_b"
                app:layout_constraintTop_toBottomOf="@id/productview_image_vp"
                app:srcCompat="@drawable/ic_favorite_border_unchecked" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/productview_image_vp"
                android:layout_width="380sp"
                android:layout_height="380sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.viewpager.widget.ViewPager>

            <TextView
                android:id="@+id/quantity_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:text="Quantity"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/pv_divider"
                app:layout_constraintEnd_toStartOf="@id/stockup_b"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productview_image_vp" />

            <Button
                android:id="@+id/stockup_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/fui_bgFacebook"
                android:elevation="16dp"
                android:text="STOCK"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/fui_bgGoogle"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/pv_divider"
                app:layout_constraintEnd_toStartOf="@id/favorite_ib"
                app:layout_constraintStart_toEndOf="@id/quantity_tv"
                app:layout_constraintTop_toBottomOf="@id/productview_image_vp"
                app:srcCompat="@drawable/ic_das_add_black_24dp" />

            <View
                android:id="@+id/pv_divider"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/list_scrolling_sv"
                app:layout_constraintTop_toBottomOf="@id/quantity_tv" />

            <ScrollView
                android:id="@+id/list_scrolling_sv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@id/itemsofproduct_cl"
                app:layout_constraintEnd_toEndOf="@id/itemsofproduct_cl"
                app:layout_constraintStart_toStartOf="@id/itemsofproduct_cl"
                app:layout_constraintTop_toBottomOf="@id/pv_divider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ExpandableListView
                        android:id="@+id/productviewitems_elv"
                        android:layout_width="match_parent"
                        android:layout_height="400sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:divider="@color/colorPrimary"
                        android:dividerHeight="0.5dp"
                        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                        app:layout_constraintHorizontal_bias="0.206">

                    </ExpandableListView>
                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/add_validate_b"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="16dp"
        android:fadingEdge="none"
        android:text="ADD TO CART"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrolling_sv" />

</androidx.constraintlayout.widget.ConstraintLayout>